<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">





<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    >


    <LinearLayout
        android:id="@+id/linearlayout_countrynames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"



        >


        <ImageButton
            android:layout_width="90dp"
            android:layout_height="31dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_filter_alt_24"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"

            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_below="@+id/linearlayout_countrynames"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="categoryy"
            android:textSize="23dp"
            />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recyleviewhomefragment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linearlayout_category"

        >






    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/news_erorr_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eror! try again"
        android:layout_centerInParent="true"



        />

    <ProgressBar
        android:id="@+id/counrty_loading_prgsbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"

        />




</RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>