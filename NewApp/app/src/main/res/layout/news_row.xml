<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.homeFragment">


    <ImageView
        android:id="@+id/img_newsposter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/txt_news_poster_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="haberrrr"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/img_newsposter"
        android:paddingRight="23dp"
        android:layout_marginStart="16dp"
        />

   <LinearLayout
       android:id="@+id/newhome_linearlayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="@+id/img_newsposter"
       >


       <TextView
           android:id="@+id/txt_author"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxLines="1"
           android:ellipsize="end"
           tools:text="newscompanyname"
           android:drawablePadding="4dp"
           android:textColor="#fff"
           app:drawableStartCompat="@drawable/authot_img"
           android:gravity="center_vertical"

           android:layout_margin="8dp"
           />

   </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>